<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="#F7F6F6">

        <ImageView
            android:id="@+id/gambar_penemu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:background="#ffff"
            android:src="@drawable/ic_person" />

        <TextView
            android:id="@+id/penemu_barang"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_toEndOf="@+id/gambar_penemu"
            android:text="Penemu" />

        <TextView
            android:id="@+id/lokasi_barang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/penemu_barang"
            android:layout_marginLeft="4dp"
            android:layout_toEndOf="@id/gambar_penemu"
            android:text="Lampung" />

        <ImageView
            android:id="@+id/gambar_barang"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_below="@id/gambar_penemu"
            android:layout_marginTop="4dp"
            android:background="#FFFFFF"
            android:src="@drawable/ic_person" />

        <TextView
            android:id="@+id/judul_barang"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gambar_barang"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:text="judul barang vvvvvvvvvvvvvvvvvvvvvvvv vvvvvvvvvvvvvvvvv vvvvv" />

        <Button
            android:id="@+id/btn_lihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/judul_barang"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:background="#CCCCCC"
            android:text="Lihat"
            android:textColor="#ffff" />

    </RelativeLayout>

</android.support.v7.widget.CardView>