<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imgdetail"
        android:src="@drawable/ic_person"
        android:layout_width="match_parent"
        android:layout_height="220dp" />
    <TextView
        android:layout_marginTop="12dp"
        android:id="@+id/judulBarang_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        style="@style/TextAppearance.AppCompat.Body2"
        android:layout_below="@id/imgdetail"
        android:text="Judul barang ditemukan"/>

    <RelativeLayout
        android:id="@+id/reldes"
        android:layout_marginTop="8dp"
        android:background="#ffff"
        android:layout_below="@id/judulBarang_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/desk_detail"
            android:text="Deskripsi barang"
            android:layout_width="match_parent"
            android:layout_height="80dp" />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/noHp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        style="@style/TextAppearance.AppCompat.Body2"
        android:layout_below="@id/reldes"
        android:text="Judul barang ditemukan"/>

    <RelativeLayout
        android:id="@+id/reldes2"
        android:layout_marginTop="8dp"
        android:background="#ffff"
        android:layout_below="@id/noHp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/desk_detail"
            android:text="Deskripsi barang"
            android:layout_width="match_parent"
            android:layout_height="80dp" />
    </RelativeLayout>


</RelativeLayout>